<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:controller="com.jcryptosync.LoginController" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="350.0" minWidth="500.0" prefHeight="350.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <VBox prefHeight="0.0" prefWidth="0.0">
               <children>
                  <Label text="Пароль:" />
                  <TextField fx:id="firstPassword" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </VBox>
            <VBox prefHeight="0.0" prefWidth="0.0" fx:id="secondPasswordContainer">
               <children>
                  <Label text="Повторите пароль:"  fx:id="secondPasswordLabel" />
                  <TextField fx:id="secondPassword" />
               </children>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </VBox>
            <VBox prefHeight="0.0" prefWidth="0.0">
               <children>
                  <Label text="Путь до ключа:" />
                  <HBox prefHeight="0.0" prefWidth="0.0">
                     <children>
                        <TextField HBox.hgrow="ALWAYS">
                           <HBox.margin>
                              <Insets right="5.0" />
                           </HBox.margin></TextField>
                        <Button mnemonicParsing="false" text="Выбрать" />
                     </children>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </VBox>
            <VBox prefHeight="0.0" prefWidth="0.0">
               <children>
                  <Label text="Путь до рабочей папки:" />
                  <HBox prefHeight="0.0" prefWidth="0.0">
                     <children>
                        <TextField HBox.hgrow="ALWAYS">
                           <HBox.margin>
                              <Insets right="5.0" />
                           </HBox.margin></TextField>
                        <Button mnemonicParsing="false" text="Выбрать" />
                     </children>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </VBox>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="0.0" prefWidth="0.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" fx:id="createButton" text="Новый контейнер" onAction="#createAction">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" fx:id="enterButton" text="Войти" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" top="10.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
</BorderPane>
